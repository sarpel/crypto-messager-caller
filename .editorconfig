# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON/YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# HTML/XML
[*.{html,xml,svg}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# CSS/SCSS
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Gradle files (Android)
[*.gradle]
indent_style = space
indent_size = 4

# Kotlin
[*.{kt,kts}]
indent_style = space
indent_size = 4
continuation_indent_size = 8

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# Config files
[*.ini]
indent_style = space
indent_size = 4

# SQL
[*.sql]
indent_style = space
indent_size = 2
